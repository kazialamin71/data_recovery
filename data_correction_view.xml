<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="data_correction_view" model="ir.ui.view">
            <field name="name">data.correction</field>
            <field name="model">data.correction</field>
            <field name="arch" type="xml">
                <form string="data correction">
                    <header>
                        <button name="opd_data" string="OPD Data Correction" type="object"/>
                    </header>

                    <sheet>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="opd_count"/>
                            <field name="total_amount"/>
                            <field name="opd_ids"/>
                            <field name="move_ids"/>
                            <field name="not_move_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>

        </record>

        <record model="ir.ui.view" id="data_correction_tree" >
            <field name="name">data.correction.tree</field>
            <field name="model">data.correction</field>
            <field name="arch" type="xml">
            <tree string="Data Collection List">
                <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="opd_count"/>
                            <field name="total_amount"/>
<!--                            <field name="opd_ids"/>-->
<!--                            <field name="move_ids"/>-->
            </tree>
            </field>
        </record>

        <record id="data_correction_action" model="ir.actions.act_window">
            <field name="name">Data Correction</field>
            <field name="res_model">data.correction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Data Correction" id="data_correction_main_menu" parent="leih.leih_billing_menu" action="data_correction_action"/>

    </data>
</openerp>